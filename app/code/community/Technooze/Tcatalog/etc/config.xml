<config>
    <modules>
        <Technooze_Tcatalog>
            <version>0.1.0</version>
        </Technooze_Tcatalog>
    </modules>
    <frontend>
        <layout>
            <updates>
                <tcatalog>
                    <file>tcatalog.xml</file>
                </tcatalog>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <tcatalog>
                <class>Technooze_Tcatalog_Block</class>
            </tcatalog>
            <catalog>
                <rewrite>
                    <product_view>Technooze_Tcatalog_Block_Product_View</product_view>
                    <!--
                    // doesn't work in enterprise, need to test in community.
                    <product_list_related>Technooze_Tcatalog_Block_Product_List_Related</product_list_related>
                    -->
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <tcatalog>
                <class>Technooze_Tcatalog_Helper</class>
            </tcatalog>
            <catalog>
                <rewrite>
                    <product_compare>Technooze_Tcatalog_Helper_Product_Compare</product_compare>
                </rewrite>
            </catalog>
        </helpers>
        <models>
            <tcatalog>
                <class>Technooze_Tcatalog_Model</class>
            </tcatalog>
        </models>
    </global>
</config>